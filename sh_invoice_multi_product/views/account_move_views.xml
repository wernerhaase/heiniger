<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ACCOUNT INVOICE FORM VIEW -->
    <record id="sh_inherit_invoice_form" model="ir.ui.view">
        <field name="name">sh.inherit.invoice.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"></field>
        <field name="arch" type="xml">
            <button name="preview_invoice" position="after">
                <button name="sh_action_select_product" string="Select Products" type="object" states="draft" class="btn-primary" context="{'sh_active_inv':id,'sh_sale_type': 'sale_ok'}" />
            </button>
        </field>
    </record>
</odoo>