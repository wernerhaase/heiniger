<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_inventory_product_inherit_orchid" model="ir.ui.view">
            <field name="name">inventory.product.inherit.orchid</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//page[@name='sales']" position="after">
                        <page name="orchid_config" string="Product Details" >
                            <group>
                                <group>
                                    <field name="orchid_brand_id" />
                                    <field name="orchid_type_id"  />
                                    <field name="orchid_sub_type_id"  />
                                    <field name="orchid_country_id" />
                                </group>
                                <group>
                                    <field name="orchid_group_id"  />
                                    <field name="orchid_sub_group_id"  />
                                    <field name="orchid_class_id"  />
                                    <field name="orchid_hscode_id" />
                                </group>
                            </group>
                        </page>
                    </xpath>
                    <!-- <field name="categ_id" position="after">
                        <field name="orchid_arabic"/>
                    </field> -->

                    <field name="categ_id" position="attributes">
                        <attribute name="string">Product Line</attribute>
                    </field>
                    <xpath expr="//page[@name='orchid_config']" position="after">
                        <page name="orchid_spec" string="Specifications" >
                            <group>
                                <group>
                                    <field name="od_com_code"/>
                                    <field name="od_mult_qty"/>
                                    <field name="od_pcs_box"/>
                                </group>

                                <group>
                                    <field name="od_depth"/>
                                    <field name="od_width"/>
                                    <field name="od_height"/>
                                    <field name="od_weight"/>
                                    <field name="od_pkg_weight"  />
                                    <field name="od_ttl_weight"  />
                                    <field name="od_cbm_vol"  />
                                </group>
                                
                                <group>
                                    <field name="od_pcs_pallet"  />
                                    <field name="od_box_layer"  />
                                    <field name="od_layer"  />
                                    <field name="od_box_pallet" />
                                    <field name="od_max_pallet_ht" />
                                </group>

                            </group>
                        </page>
                    </xpath>
                    <field name="list_price" position="after">
                        <field name="od_factory_cost" groups="orchid_somfy_ksa_v16.group_factory_users"/>
                    </field>
                </data>
            </field>
        </record>

        <record id="product_template_only_form_view_inherit_orchid" model="ir.ui.view">
            <field name="name">product.template.product.form.inherit.orchid</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <field name="default_code" position="attributes">
                    <attribute name="string">Product Code</attribute>
                </field>
            </field>
        </record>

        <record id="orchid_product_category_form_view_inherit" model="ir.ui.view">
            <field name="name">orchid.product.ategory.form.inherit</field>
            <field name="model">product.category</field>
            <field name="inherit_id" ref="product.product_category_form_view"/>
            <field name="arch" type="xml">
                <data>
                    <field name="parent_id" position="after">
                        <field name="od_code" placeholder="code" class="oe_inline"/>
                    </field>
                </data>
            </field>
        </record>

    </data>
 </odoo>



