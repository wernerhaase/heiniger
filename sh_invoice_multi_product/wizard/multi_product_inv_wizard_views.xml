<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="sh_multi_product_wizard_inv" model="ir.ui.view">
        <field name="name">sh.multi.product.wizard.inv</field>
        <field name="model">multi.product.wizard.inv</field>
        <field name="arch" type="xml">
            <form string="Select Products">
                <div>
                    <h4>Please Select products and hit "Apply" button</h4>
                </div>
                <group>
                    <field name="product_ids" domain="[(context.get('sh_sale_type'), '=', True)]" options="{'no_create': True}">
                        <tree editable="bottom">
                            <field name="name" />
                        </tree>
                    </field>
                </group>
                <footer>
                    <button name="sh_multi_product_apply" string="Apply" type="object" class="oe_highlight" />
                    or
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
</odoo>