<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_order_form" model="ir.ui.view">
        <field name="name">sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="priority">15</field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']//tree//field[@name='name']" position="before">
                <field name="html_description" readonly="1" force_save="1" />
                <button name="open_form" type="object" icon="fa-pencil-square-o"/>
            </xpath>

            <xpath expr="//field[@name='order_line']//tree//field[@name='name']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

    <record id="sale_order_line_view_html_description_form" model="ir.ui.view">
        <field name="name">sale.order.line.html.description.form</field>
        <field name="model">sale.order.line</field>
        <field name="arch" type="xml">
            <form string="Product Description">
                <sheet>
                    <group>
                        <field name="html_description" nolabel="1" widget="html" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
