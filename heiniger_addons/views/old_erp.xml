<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="view_order_form_sale_orchid_old_erp_inher" model="ir.ui.view">
			<field name="name">sale.order.old.erp.inher</field>
			<field name="model">sale.order</field>
			<field name="inherit_id" ref="sale.view_order_form"/>
			<field name="arch" type="xml">
				<xpath expr="/form/sheet/notebook/page/field[@name='order_line']/tree/field[@name='product_uom_qty']" position="after">
					<field name="old_erp_id" invisible="1"/>
				</xpath>
				<field name="partner_id" position="after">
					<field name="old_erp_id" invisible="1"/>
				</field>
			</field>
		</record>

		<record id="view_order_form_purchase_orchid_old_erp_inher" model="ir.ui.view">
			<field name="name">purchase.order.old.erp.inher</field>
			<field name="model">purchase.order</field>
			<field name="inherit_id" ref="purchase.purchase_order_form"/>
			<field name="arch" type="xml">
				<xpath expr="/form/sheet/notebook/page/field[@name='order_line']/tree/field[@name='product_qty']" position="after">
					<field name="old_erp_id" invisible="1"/>
				</xpath>
				<field name="partner_id" position="after">
					<field name="old_erp_id" invisible="1"/>
				</field>
			</field>
		</record>

		<record id="view_partner_form_old_erp_inher" model="ir.ui.view">
			<field name="name">res.partner.form.old.erp.inher</field>
			<field name="model">res.partner</field>
			<field name="inherit_id" ref="base.view_partner_form"/>
			<field name="arch" type="xml">
				<data>
					<field name="name" position="after">
						<field name="old_erp_id" invisible="1"/>
					</field>
				</data>
			</field>
		</record>

		<record id="product_template_only_form_view_inherit_old_erp_orchid" model="ir.ui.view">
            <field name="name">product.template.product.form.old.erp.inherit.orchid</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <field name="default_code" position="after">
                    <field name="old_erp_id" invisible="1"/>
                </field>
            </field>
        </record>
	</data>
</odoo>